{
  "name": "node-package-release-action",
  "version": "2.1.15-26",
  "description": "A template to create custom GitHub Action with TypeScript/JavaScript.",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf lib && yarn tsc",
    "package": "rm -rf dist && yarn ncc build src/index.ts --external eslint --source-map --license licenses.txt",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint -c eslint.config.js",
    "postinstall": "is-ci || husky install",
    "preversion": "yarn && yarn build && yarn package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CatChen/node-package-release-action.git"
  },
  "author": "Cat Chen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CatChen/node-package-release-action/issues"
  },
  "homepage": "https://github.com/CatChen/node-package-release-action#readme",
  "funding": "https://github.com/CatChen/node-package-release-action?sponsor=1",
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.1.1",
    "@octokit/graphql-schema": "^15.1.2",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@serverless-guru/prettier-plugin-import-order": "^0.4.1",
    "@types/glob": "^8.0.0",
    "@types/node": "^20.1.3",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "5",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.2",
    "typescript": "^5.0.2",
    "typescript-eslint": "^7.8.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@octokit/plugin-retry": "^7.1.1",
    "@octokit/plugin-throttling": "^9.3.0",
    "glob": "^10.2.3",
    "semver": "^7.3.8"
  },
  "resolutions": {
    "strip-ansi": "6.0.1",
    "@octokit/core": "^6.0.0"
  },
  "lint-staged": {
    "*.(ts,js)": "yarn lint --fix",
    "*.json": "yarn prettier -w",
    "*.(yml,yaml)": "yarn prettier -w",
    "*.(md,markdown)": "yarn prettier -w"
  }
}
